{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión{% endblock %}

{% block body %}
{# Contenedor centrado con diseño moderno #}
<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-5 col-lg-4">
            {# Card principal con sombra #}
            <div class="card shadow-lg border-0" style="border-radius: 15px;">
                <div class="card-body p-5">
                    {# Encabezado con icono #}
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle" style="font-size: 4rem; color: #667eea;"></i>
                        <h1 class="h3 mt-3 fw-bold">Iniciar Sesión</h1>
                        <p class="text-muted">Accede a tu cuenta</p>
                    </div>

                    {# Mensaje de error si existe #}
                    {% if error %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endif %}

                    {# Formulario de login #}
                    <form method="post">
                        {# Campo Email #}
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label fw-semibold">
                                <i class="bi bi-envelope-fill me-1"></i> Email
                            </label>
                            <input type="email" 
                                   value="{{ last_username }}" 
                                   name="email" 
                                   id="inputEmail" 
                                   class="form-control form-control-lg" 
                                   placeholder="tu@email.com"
                                   autocomplete="email" 
                                   required 
                                   autofocus>
                        </div>

                        {# Campo Password #}
                        <div class="mb-3">
                            <label for="inputPassword" class="form-label fw-semibold">
                                <i class="bi bi-lock-fill me-1"></i> Contraseña
                            </label>
                            <input type="password" 
                                   name="password" 
                                   id="inputPassword" 
                                   class="form-control form-control-lg" 
                                   placeholder="••••••••"
                                   autocomplete="current-password" 
                                   required>
                        </div>

                        {# Token CSRF oculto #}
                        <input type="hidden" 
                               name="_csrf_token" 
                               data-controller="csrf-protection" 
                               value="{{ csrf_token('authenticate') }}">

                        {# Checkbox Remember Me #}
                        <div class="form-check mb-4">
                            <input type="checkbox" 
                                   class="form-check-input" 
                                   name="_remember_me" 
                                   id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                Recordarme
                            </label>
                        </div>

                        {# Botón de envío #}
                        <div class="d-grid mb-3">
                            <button class="btn btn-primary btn-lg" type="submit" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 8px;">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                            </button>
                        </div>

                        {# Separador #}
                        <hr class="my-4">

                        {# Link de registro #}
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                ¿No tienes cuenta? 
                                <a href="{{ path('app_register') }}" class="text-decoration-none fw-bold" style="color: #667eea;">
                                    Regístrate aquí
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            {# Footer informativo #}
            <div class="text-center mt-3">
                <small class="text-white-50">
                    © 2025 CRUD Symfony - Sistema de Gestión
                </small>
            </div>
        </div>
    </div>
</div>
{% endblock %}
